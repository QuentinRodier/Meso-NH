# On va lancer la compilation dans le r√©pertoire de lancement du job
cd ${SLURM_SUBMIT_DIR}

# Chargement du profil (qui contient le source vers l'env ifpen-mesonh)
. ../conf/profile_mesonh-LXifort-R8I4-MNH-V5-6-0-MPIAUTO-O2

